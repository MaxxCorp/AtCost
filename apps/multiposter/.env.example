# Example environment variables for local development
# Copy this file to .env and fill in real values. Never commit real secrets.

PUBLIC_BASE_URL="http://localhost:5173"

# --- Active variable names used by the app (recommended) ---
DATABASE_URL="postgresql://user:password@host:5432/db-name?sslmode=require"
BETTER_AUTH_SECRET="your_secret_key_here"
BETTER_AUTH_URL="http://localhost:5173" # Base URL of your app
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"
# Optional Microsoft OAuth
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""

# Cron secret used by /api/sync/renew-webhooks
CRON_SECRET="your_cron_secret_here"

# Email provider (Brevo/Sendinblue)
BREVO_API_KEY="your_brevo_api_key_here"

# Meetup provider
MEETUP_CLIENT_ID="your_meetup_client_id_here"
MEETUP_CLIENT_SECRET="your_meetup_client_secret_here"

# Eventbrite provider
EVENTBRITE_CLIENT_ID="your_eventbrite_client_id_here"
EVENTBRITE_CLIENT_SECRET="your_eventbrite_client_secret_here"

# WordPress The Events Calendar provider
WP_EVENTS_CALENDAR_BASE_URL="https://your-wordpress-site.com"
WP_EVENTS_CALENDAR_USERNAME="your_wp_username_here"
WP_EVENTS_CALENDAR_APP_PASSWORD="your_wp_application_password_here"

# Blob Storage
BLOB_READ_WRITE_TOKEN="your_blob_write_token_here"

# Realtime (Ably)
ABLY_API_KEY="your_ably_api_key_here"  

