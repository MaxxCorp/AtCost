{
    "compilerOptions": {
        "moduleResolution": "bundler",
        "module": "esnext",
        "target": "esnext",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "checkJs": true,
        "skipLibCheck": true,
        "strict": true,
        "paths": {
            "$app/*": [
                "./node_modules/@sveltejs/kit/src/runtime/app/*"
            ],
            "$lib/*": [
                "./src/lib/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".svelte-kit"
    ]
}